@model GameManagementMvc.Models.Game

@{
    ViewData["Title"] = "Delete Game";
    var game = Model;
}

<h1>@ViewData["Title"]</h1>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<hr>

<div class="container">
    <h3 class="text-danger">Are you sure you want to delete this game?</h3>

    <hr>

    <div class="row justify-content-start">
        <div class="col-4">
            @if (String.IsNullOrEmpty(game.Image))
            {
            <img src="~/img/default.png" alt="No image" class="img-thumbnail">
            }
            else
            {
            <img src="@game.Image" alt="Game image" class="img-thumbnail">
            }
        </div>

        <dl class="row col-8">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(_ => game.Title)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(_ => game.Title)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(_ => game.Body)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(_ => game.Body)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(_ => game.Rating)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(_ => game.Rating)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(_ => game.ReleaseDate)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(_ => game.ReleaseDate)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(_ => game.Company)
            </dt>
            <dd class = "col-sm-10">
                <a asp-controller="Company" asp-action="Details" asp-route-id="@game.Company!.Id">
                    @Html.DisplayFor(_ => game.Company!.Title)
                </a>
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(_ => game.Genres)
            </dt>
            <dd class = "col-sm-10">
                @for (var i = 0; i < game.Genres!.Count; i++)
                {
                    if (i != 0)
                    {
                        <span> | </span>
                    }
                    <a asp-controller="Genre" asp-action="Details" asp-route-id="@game.Genres![i].Id">
                        @Html.DisplayFor(_ => game.Genres![i].Title)
                    </a>
                }
            </dd>
        </dl>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Confirm" class="btn btn-danger" />
        <a asp-action="Edit" asp-route-id="@game.Id" class="btn btn-primary">Edit</a>
        <a asp-action="Details" asp-route-id="@game.Id" class="btn btn-primary">Details</a>
        <a asp-action="Index" class="btn btn-primary">Back to List</a>
    </form>
</div>



